<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:contentDescription="@string/movie_detail"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avengers_detail" />

    <TextView
        android:id="@+id/lbl_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFBFB44E"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_detail" />

    <TextView
        android:id="@+id/summary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/summary"
        android:textAlignment="center"
        android:textColor="#FFBFB44E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_movie_title" />

    <TextView
        android:id="@+id/lbl_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/valueRegular"
        android:layout_marginStart="@dimen/valueRegular"
        android:hint="@string/summary"
        android:layout_gravity="center"
        android:textColor="#FFBFB44E"
        android:textSize="@dimen/valueFont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_title" />


    <TextView
        android:id="@+id/director_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="@dimen/valueRegular"
        android:text="@string/director_lbl"
        android:textColor="#FFBFB44E"
        android:textSize="@dimen/valueFont"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_summary" />

    <TextView
        android:id="@+id/stars_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:text="@string/star"
        android:textColor="#FFBFB44E"
        android:layout_marginStart="@dimen/valueRegular"
        android:textSize="@dimen/valueFont"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/director_txt" />

    <TextView
        android:id="@+id/lbl_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="25dp"
        android:hint="@string/textView"
        android:textColor="#FFBFB44E"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/director_txt"
        app:layout_constraintTop_toBottomOf="@+id/lbl_summary"
        app:layout_goneMarginStart="@dimen/valueRegular" />

    <TextView
        android:id="@+id/lbl_stars"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/textView"
        android:textColor="#FFBFB44E"
        android:textSize="@dimen/valueFont"
        app:layout_constraintStart_toStartOf="@+id/lbl_director"
        app:layout_constraintTop_toBottomOf="@+id/lbl_director" />

</androidx.constraintlayout.widget.ConstraintLayout>
